@model IEnumerable<Assignment2.Models.Mountain>

@{
    ViewData["Title"] = "Index";
}
<h1>Mountains</h1>
<p>
    <a asp-action="Create">Create New Mountain</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MountainName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Elevation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Difficulty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MountainName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Elevation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Difficulty)
            </td>
            @if (User.Identity.IsAuthenticated)
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MountainId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MountainId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MountainId">Delete</a>
                    
                </td>
            }
            </tr>
        }
    </tbody>
</table>