@model Assignment2.Models.HikeLog
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit Hike Log</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HikeId" />
            <div class="form-group">
                <label asp-for="MountainName" class="control-label">Mountain</label>
                <select asp-for="MountainId" class="form-control" asp-items="ViewBag.MountainId">
                    <option>Select Mountain</option>
                </select>
                <span asp-validation-for="MountainName" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="MountainId" class="control-label"></label>
                    <select asp-for="MountainId" class="form-control" asp-items="ViewBag.MountainId"></select>
                    <span asp-validation-for="MountainId" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="DateHiked" class="control-label">Date Hiked</label>
                <input asp-for="DateHiked" class="form-control" />
                <span asp-validation-for="DateHiked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeToSummit" class="control-label">Time To Summit</label>
                <input asp-for="TimeToSummit" class="form-control" />
                <span asp-validation-for="TimeToSummit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}